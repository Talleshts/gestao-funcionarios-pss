<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <File name="File" fileName="logs/application-csv.log">
      <PatternLayout>
        <Pattern>%msg%X{operacao}:%X{nome},(%d{dd-MM-yyyy},%d{HH:mm:ss},%X{usuario});%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>
